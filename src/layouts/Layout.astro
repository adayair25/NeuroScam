---
interface Props {
  title: string;
}

const { title } = Astro.props;
import SingIn from '../components/SingIn.svelte';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <nav>
        <a href="/">
          <picture>
            <img width="30" height="30" src="/logo.svg" alt="logo" />
          </picture>
        </a>
          <a target="_blank" href="https://github.com/">
        <picture>
          <img width="30" height="30" src="/github.svg" alt="github_logo" />
        </picture>
        </a>
      </nav>
      <SingIn client:load />
    </header>
    <slot />
  </body>
</html>
<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
  }
  html {
    font-family: system-ui, sans-serif;
    background: #1c1917;
    color: #fafaf9;
  }

  header{
	display: flex;
	justify-content: space-between;
	border-bottom: 1px solid #27272a;
  padding: 0.5rem;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
