---
import Layout from "../layouts/Layout.astro";
import InputImage from "../components/InputImage.svelte";
---

<Layout title="NeuroScan">
  <main>
    <div class="presentation">
      <h1>NeuroScan</h1>
      <p>
        NeuroScan is a tool for analyzing tumors based in <span
          >Computer Vision</span
        >, NeuroScan that allow analyzing tumors through a magnetic resonanse.
      </p>
    </div>
    <InputImage />
  </main>
  <section class="fq">
    
  </section>
</Layout>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const questions = document.querySelectorAll("h3");
    questions.forEach((question) => {
      question.addEventListener("click", () => {
        question.nextElementSibling.classList.toggle("answer");
      });
    });
  });
</script>
<style>
  .answer {
    display: none;
  }

  details {
    transition: max-height 0.5s ease-in;
  }

  details[open] {
    max-height: 100px;
  }
  main {
    display:;
    padding-top: 2.5rem;
    text-align: center;
  }

  .presentation {
    max-width: 500px;
    margin: 0 auto;
    padding: 0 1.5rem;
    padding-bottom: 2rem;
  }

  .presentation {
    & h1 {
      font-size: 3rem;
      margin-bottom: 1rem;
    }
    & p {
      color: #d6d3d1;
      font-size: 18px;
    }
  }

  span {
    font-weight: bold;
    color: #fafaf9;
  }

  .fq {
    color: #fafaf9;
    padding-top: 2rem;
    text-align: center;
  }
</style>
